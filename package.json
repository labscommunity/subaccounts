{
  "name": "arweave-subaccounts",
  "version": "0.1.2",
  "description": "App-based subaccounts for Arweave",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/rareweave/subaccounts",
  "author": "Angrymouse <nik@hns.is>",
  "license": "Unlicense",
  "private": false,
  "scripts": {
    "build": "npm run prettier && rm -rf ./dist && rollup -c && dts-bundle-generator src/index.ts -o dist/index.d.ts --no-banner",
    "dev": "npm run prettier && npm run test",
    "prettier": "prettier --write .",
    "test": "jest test/test/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/test/*.ts"
    ]
  },
  "dependencies": {
    "arweave": "^1.13.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.17.17",
    "prettier": "^3.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.7",
    "dts-bundle-generator": "^8.1.2",
    "jest": "^29.7.0",
    "rollup": "^4.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
